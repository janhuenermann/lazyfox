{% import "_includes/forms" as forms %}

<style>
	#settings-sourceSet textarea {
		font-family: monospace;
	}
</style>

{{forms.selectField({
	label: 'Appearance / preview type',
	instructions: 'This is how your image will preview.',
	name: 'previewType',
	id: 'previewType',
	options: { 'pixelated': 'Pixelated', 'blurred': 'Blurred' },
	value: settings['previewType']
})}}

{{forms.textField({
	type: 'number',
	label: 'Preview size',
	instructions: 'This is how many pixels the preview image (that is embedded into the HTML page) should have',
	name: 'previewSize',
	id: 'previewSize',
	value: settings['previewSize']
})}}

{{forms.editableTableField({
	id: 'sourceSet',
	name: 'sourceSet',
	cols: { handle: { type: 'text', heading: 'Handle', placeholder: 'halfResolution' }, size: { type: 'text', heading: 'Size', placeholder: '50%' } },
	rows: settings['sourceSet']
})}}
